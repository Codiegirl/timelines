
<hr>
<div class="container">
  <%= form_with(model: @person) do |f|%>
    <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => "form-control"%>
    </div>
    <div class="form-group">
    <%= f.label :birthday %><br>
    <%= f.date_select :birthday, :start_year=>1920, :end_year=>Date.today.year, :class => "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label :avatar_url, "Copy and paste an image URL to save it as your Avatar!"%>
    <%= f.text_field :avatar_url, :class => "form-control" %>
    </div>
    <%= f.submit :class => "btn btn-primary" %>
  <%end%>
</div>