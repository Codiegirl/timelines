<div class="h1pic">
  <h1><%=@person.name%></h1>
  <%= image_tag @person.avatar_url, height: "200", class: "face"%>
</div>

   <ul>
    <li>
      Date of Birth: <%= @person.birthday.strftime('%B %d, %Y')%>
    </li>
  </ul>

<br><br><br>

<h3>Personal Timeline:</h3>
 <table>
    <tr>
      <th>Position</th><th>Employer</th><th>City</th><th>Arrival Date</th><th>Departure Date</th>
    </tr>
  <tbody>
    <% @person.sorted_positions.each do |p| %>
    <tr>
      <td class="left"><%=link_to p.title, position_path(p)%></td><td><%=link_to p.employer.name, employer_path(p.employer)%></td><td><%=link_to p.city.name, city_path(p.city)%></td><td><%= p.start_date.strftime('%B %Y') %></td><td><%= p.finish_date.strftime('%B %Y') %></td>
    </tr>
    <%end%>
  </tbody>
</table>

<br>

<h3>Personal Timeline:</h3>
 <table>
    <tr>
      <th>Reason</th><th>Position</th><th>City</th><th>Arrival Date</th><th>Departure Date</th>
    </tr>
  <tbody>
    <% @person.timeline.each do |p| %>
    <tr>
      <td class="left"><%=p[0]%></td><td class="left"><%=p[1]%></td><td><%=p[2]%></td><td><%= p[3].strftime('%B %Y') %></td><td><%= p[4].strftime('%B %Y')%></td>
    </tr>
    <%end%>
  </tbody>
</table>

<br>

<h3>Parallel lives:</h3>
<ul><li>These people have been in the same cities as <%=@person.name%> at the same times:</li></ul>
 <table>
    <tr>
      <th>Counterpart</th><th>City</th><th>Overlap beginning</th><th>Overlap end</th>
    </tr>
  <tbody>
    <% @person.parallel_positions.each do |pp| %>
    <tr>
      <td class="left"><%=link_to pp[0].name, person_path(pp[0])%></td><td><%=pp[1]%></td><td><%= pp[2].strftime('%B %Y') %></td><td><%= pp[3].strftime('%B %Y') %></td>
    </tr>
    <%end%>
  </tbody>
</table>
<br><br>

<br>

<%=form_tag("/people/#{@person.id}/edit", method: "get") do |f| %>
  <%=submit_tag "Edit"%>
<%end%>
<%=form_tag("/people/#{@person.id}", method: "delete") do |f| %>
  <%=submit_tag "Delete"%>
<%end%>