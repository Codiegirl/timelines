<h1>Positions list:</h1>

  <ul>
    <% @positions.each do |position|%>
      <li>
        <strong><%= link_to position.title, position_path(position)%></strong>
      </li>
        <ul>
          <li>
            <%= link_to position.person.name, person_path(position.person)%>
          </li>
          <li>
            <%= link_to position.employer.name, employer_path(position.employer)%>
          </li>
          <li>
            <%= position.description%>
          </li>
          <li>
            From: <%= position.start_date.strftime('%b %Y')%>, until: <%=position.finish_date.strftime('%b %Y')%>
          </li><br>
        </ul>
    <%end%>
  </ul>