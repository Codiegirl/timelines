<h1 class="c">Employers Index</h1>
<hr>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">Company Name</th>
      <th scope="col">Industry</th>
      <th scope="col">Size (Employees)</th>
      <th scope="col" class="wrap">Products</th>
    </tr>
  </thead>
  <tbody>
  <% @employers.each do |e|%>
    <tr class="double">
      <td><%= link_to e.name, employer_path(e)%></td>
      <td><%= e.industry %></td>
      <td><%= e.size %></td>
      <td class="l"><%= e.products %></td>
    </tr>
  <%end%>
  </tbody>
</table>
