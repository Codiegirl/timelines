<div>
<h1><%=@employer.name%></h1>
<h4>About the company:</h4>
  <ul>
    <li>
      Industry: <%= @employer.industry%>
    </li>
    <li>
      Company size: <%= @employer.size%>
    </li>
    <li>
      Products & services: <%= @employer.products%>
    </li>
    <li>
      <%= link_to 'Company website', @employer.website_url, target: "_blank" %>
    </li>
    <li>
      <%= @employer.description%>
    </li>
  </ul>
  <hr>

<hr>
<h4><%=@employer.name %> has an office in:</h4>
  <ul>
    <%@employer.cities.uniq.each do |city|%>
    <li>
      <%= link_to city.name, city_path(city) %>
    </li>
    <%end%>
  </ul>
  <hr>
<hr>
<h4>These people have worked at <%=@employer.name %>:</h4>
  <ul>
    <%@employer.sorted_positions.each do |position|%>
    <li>
      <%= link_to position.person.name, person_path(position.person) %> from <%= position.start_date.year %> until <%= position.finish_date.year%>.
    </li>
    <%end%>
  </ul>
<hr>
<hr>

<%=form_tag("/employers/#{@employer.id}/edit", method: "get") do |f| %>
<a class="indent"><button class="btn btn-primary" type="submit">Edit Employer</button></a>
<%end%>
<%=form_tag("/employers/#{@employer.id}", method: "delete") do |f| %>
  <a><button class="btn btn-primary" type="submit">Delete Employer</button></a>
<%end%>
</div>

<hr>