
<hr>
<div class="container">
<%= form_with(model: @employer) do |f|%>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :industry %>
  <%= f.text_field :industry, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :size %>
  <%= f.text_field :size, :class => "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_field :description, :class => "form-control"%>
  </div>
  <div class="form-group">
  <%= f.label :products %>
  <%= f.text_field :products, :class => "form-control"%>
  </div>
  <div>
  <%= f.submit :class => "btn btn-primary" %>
  </div>
<%end%>
</div>
