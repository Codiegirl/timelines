<h1 class="c">Cities Index</h1>
<hr>

<table class="table table-striped">
  <thead class="thead-dark">
    <tr>
      <th scope="col">City</th>
      <th scope="col">Region</th>
      <th scope="col">Country</th>
      <th scope="col">Average residence length</th>
      <th scope="col">Number of Database Residents</th>
    </tr>
  </thead>
  <tbody>
  <% @cities.each do |city|%>
    <tr>
      <td><%= link_to city.name, city_path(city)%></td>
      <td><%=city.region%></td>
      <td><%=city.country%></td>
      <td><%=city.yandm(city.average_residency)%></td>
      <td><%=city.people.uniq.length%></td>
    </tr>
  <%end%>
  </tbody>
</table>