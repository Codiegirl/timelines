<hr>
<div class="container">
<%= form_with(model: @city) do |f|%>
  <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :region %>
  <%= f.text_field :region, :class => "form-control" %>
  </div>
  <div class="form-group">
  <%= f.label :country %>
  <%= f.text_field :country, :class => "form-control"%>
  </div>
  <div>
  <%= f.submit :class => "btn btn-primary" %>
  </div>
<%end%>
</div>

