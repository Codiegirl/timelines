<%= form_with(model: @event) do |f|%>
  <div>
        <%= f.fields_for :visitor do |v| %>
          Visitor <%= v.label :name %>
          <%= v.text_field :name, list: "people_autocomplete" %><br><br>
          <datalist id="people_autocomplete">
            <%= @people.each do |person|%>
            <option value="<%=person.name%>">
          <%end%>
        <%end%>
  </div>
  <div>
    Event <%= f.label :title %>
    <%= f.text_field :title %><br><br>
  </div>
   <div>
    Event <%= f.label :description %>
    <%= f.text_area :description %><br><br>
  </div> 
   <div>
        <%= f.fields_for :destination do |destination| %>
          Destination <%= destination.label :name %>
          <%= destination.text_field :name, list: "cities_autocomplete" %><br><br>
          <datalist id="cities_autocomplete">
          <%= @cities.each do |city|%>
            <option value="<%=city.name%>">
          <%end%>
        <%end%>
  </div>

  <div>
  Event <%= f.label :start_date %>
  <%= f.date_select :start_date %><br><br>
  </div>
  <div>
  Event <%= f.label :finish_date %>
  <%= f.date_select :finish_date %><br><br>
  </div>
  <div>
  <%= f.submit %>
  </div>
<%end%>