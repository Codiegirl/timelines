<h1>Create User</h1>
<div class="container">
<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
  Name: <%= f.text_field :name, class: "form-control"%><br><br>
  Username:<%= f.text_field :username, class: "form-control" %><br><br>
  Password: <%= f.password_field :password, class: "form-control" %><br><br>
  Password Confirmation: <%= f.password_field :password_confirmation, class: "form-control" %><br><br>
  </div>
  <%= f.submit "Create User", class:"btn btn-primary" %>
<% end %>
</div>